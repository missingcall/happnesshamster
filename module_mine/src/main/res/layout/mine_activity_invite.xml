<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="m"
            type="com.kissspace.mine.viewmodel.HamsterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".module.quest.InviteActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:barStyle="transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftHorizontalPadding="16dp"
            app:leftIcon="@mipmap/common_icon_back_white" />

        <TextView
            android:id="@+id/tv_invite_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="邀请好友"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_friend_reward_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_bg_black23_radius15"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_invite_friends">

            <ImageView
                android:id="@+id/iv_icon_invite_1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/mine_icon_invite_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/tv_friend_reward_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="领奖励得松子"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_friend_reward_1_detail"
                app:layout_constraintLeft_toRightOf="@id/iv_icon_invite_1"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_friend_reward_1_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/mine_invite_description_1"
                android:textColor="@color/color_999999"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_friend_reward_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_friend_reward_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_friend_reward_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_bg_black23_radius15"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/cl_friend_reward_1">

            <ImageView
                android:id="@+id/iv_icon_invite_2"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/mine_icon_invite_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/tv_friend_reward_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="参与游戏得松子"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_friend_reward_2_detail"
                app:layout_constraintLeft_toRightOf="@id/iv_icon_invite_2"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_friend_reward_2_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/mine_invite_description_2"
                android:textColor="@color/color_999999"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_friend_reward_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_friend_reward_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_mine_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_bg_black23_radius15"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/cl_friend_reward_2">

            <ImageView
                android:id="@+id/iv_mine_invite_code"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/mine_icon_invite_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/tv_mine_invite_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="我的邀请码"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_mine_invite_code_detail"
                app:layout_constraintLeft_toRightOf="@id/iv_mine_invite_code"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_mine_invite_code_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="邀请码："
                android:textColor="@color/color_999999"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_mine_invite_code"
                app:layout_constraintTop_toBottomOf="@id/tv_mine_invite_code" />

            <ImageView
                android:id="@+id/ivCopy"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:src="@mipmap/mine_icon_copy"
                app:layout_constraintBottom_toBottomOf="@id/tv_mine_invite_code_detail"
                app:layout_constraintLeft_toRightOf="@id/tv_mine_invite_code_detail"
                app:layout_constraintTop_toTopOf="@id/tv_mine_invite_code_detail"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_friends_i_invited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="我邀请的好友"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/cl_friend_reward_1"
            app:layout_constraintTop_toBottomOf="@id/cl_mine_invite_code" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/mine_icon_refresh"
            app:layout_constraintBottom_toBottomOf="@id/tv_friends_i_invited"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_friends_i_invited" />

        <com.drake.brv.PageRefreshLayout
            android:id="@+id/page_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:empty_layout="@layout/mine_invite_empty"
            app:layout_constraintBottom_toTopOf="@id/btnInvite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_friends_i_invited"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/rv_item_invited_friends" />
        </com.drake.brv.PageRefreshLayout>

        <Button
            android:id="@+id/btnInvite"
            style="@style/commonBottomConfirmationItem"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="邀请好友"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnCopy"
            app:layout_constraintTop_toBottomOf="@id/page_refresh_layout" />

        <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_shape_blue_15"
            android:src="@mipmap/mine_ic_copy"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnInvite"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/btnInvite"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnInvite" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>