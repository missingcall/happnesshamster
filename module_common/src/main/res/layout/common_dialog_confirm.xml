<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_normal="@color/white"
        app:corner_radius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="28dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_313133"
            android:textSize="17sp"
            android:textStyle="bold"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="忽略未读"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:visibility="visible"
            />


 <!--       <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            tools:text="忽略未读"/>-->

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textColor="@color/color_949499"
            android:layout_marginBottom="28dp"
            android:textSize="15sp"
            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="5dp"
            app:border_color_normal="@color/color_5A60FF"
            android:textColor="@color/color_5A60FF"
            app:border_width_normal="1dp"
            app:corner_radius="19dp"
            android:text="取消"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_positive"/>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:gravity="center"
            app:corner_radius="19dp"
            android:textColor="@color/white"
            android:text="确定"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            app:background_normal="@color/color_5A60FF"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintStart_toEndOf="@+id/tv_negative"
            />



    </com.ruffian.library.widget.RConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>