<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        app:background_normal="@color/color_232323"
        app:corner_radius="19dp"
        >

        <com.kissspace.common.widget.ClearEditText
            android:id="@+id/et_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:hint="昵称/ID/房间名"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textColorHint="@color/color_CCC7CC"
            android:background="@null"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cancel"
            app:layout_constraintBottom_toBottomOf="@+id/et_search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="取消"
            android:textColor="@color/color_6C74FB"
            android:visibility="gone"
            android:textSize="15sp" />

    </com.ruffian.library.widget.RConstraintLayout>

</layout>