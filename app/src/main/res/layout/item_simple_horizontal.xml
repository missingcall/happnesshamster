<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:foreground="?selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ivBg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/common_bg_blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_party_glory_gift_box"
            app:layout_constraintBottom_toBottomOf="@id/ivBg"
            app:layout_constraintLeft_toLeftOf="@id/ivBg"
            app:layout_constraintRight_toRightOf="@id/ivBg"
            app:layout_constraintTop_toTopOf="@id/ivBg" />

        <TextView
            android:id="@+id/tvCoinNum"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:gravity="center"
            android:text="10万"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:bl_corners_bottomRadius="15dp"
            app:bl_solid_color="@color/color_4D000000"
            app:layout_constraintBottom_toBottomOf="@id/ivBg"
            app:layout_constraintLeft_toLeftOf="@id/ivBg"
            app:layout_constraintRight_toRightOf="@id/ivBg" />

        <TextView
            android:id="@+id/tvCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="金币"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
