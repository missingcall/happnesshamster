<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/rlRoot"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:background_normal="@color/white"
            app:corner_radius="15dp"
            >

            <com.ruffian.library.widget.RView
                android:id="@+id/vRoot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:gradient_orientation="TOP_BOTTOM"
                app:gradient_centerX="0.5"
                app:gradient_centerY="0"
                app:corner_radius_top_left="15dp"
                app:corner_radius_top_right="15dp"
                />
            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="11dp"
                android:src="@mipmap/message_ic_dialog_close"
                />
            <TextView
                android:id="@+id/tvGiftTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="仓鼠卡片"
                android:textColor="#ff313133"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="22dp"
                />
            <TextView
                android:id="@+id/tvGiftContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="亲爱的随风去随风来（UID：123456）转赠给了您一些物品，请注意查收"
                android:textColor="#ff636366"
                android:textSize="14sp"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                />

            <ImageView
                android:id="@+id/imgGift"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="132dp"
                android:layout_marginStart="15dp"
                />
            
            <com.ruffian.library.widget.RTextView
                android:id="@+id/tvReceiveMasking"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="@+id/imgGift"
                app:layout_constraintStart_toStartOf="@+id/imgGift"
                app:corner_radius="5dp"
                android:text="已领取"
                android:visibility="gone"
                tools:visibility="visible"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/white"
                app:background_normal="@color/color_80000000"

                />
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="仓鼠卡片x1"
                android:textColor="#ff232323"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/imgGift"
                app:layout_constraintTop_toTopOf="@+id/imgGift"
                android:layout_marginStart="9dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/tvGiftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff949499"
                android:textSize="11sp"
                tools:text="2024年11月21日"
                app:layout_constraintStart_toEndOf="@+id/imgGift"
                app:layout_constraintBottom_toBottomOf="@+id/imgGift"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="9dp"
                />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/tvOption"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                tools:text="领取"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                app:corner_radius="20dp"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="22dp"
                app:background_normal="@array/button_color_bg"
                app:gradient_orientation="LEFT_RIGHT"
                app:gradient_type="linear"
                android:gravity="center"
                />
        </com.ruffian.library.widget.RConstraintLayout>
    </FrameLayout>
</layout>