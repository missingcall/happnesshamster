<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kissspace.login.widget.FixedTextureVideoView
        android:id="@+id/video_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/iv_ad"
        app:layout_constraintDimensionRatio="375:695"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/app_ic_ad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_left_time"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="18dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="跳过"
        app:bl_corners_radius="16dp"
        app:bl_solid_color="#40000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="gone"
        android:layout_marginBottom="68dp"
        android:src="@mipmap/app_ic_bottom_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

</androidx.constraintlayout.widget.ConstraintLayout>