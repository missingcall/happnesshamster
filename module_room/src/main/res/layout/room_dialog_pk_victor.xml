<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Unicorn_live">

        <View
            app:layout_constraintTop_toBottomOf="@id/iv_pk_victor_icon"
            android:id="@+id/iv_pk_victor_bg"
            android:background="@mipmap/ic_pk_victor_bg"
            app:layout_constraintDimensionRatio="891:945"
            android:layout_marginTop="-52dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_297"
            android:layout_height="0dp" />

        <View
            android:id="@+id/iv_pk_victor_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@mipmap/ic_pk_victor_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="639:315"
            android:layout_width="@dimen/dp_213"
            android:layout_height="0dp" />

        <TextView

            android:id="@+id/tv_pk_flag"
            android:layout_marginTop="@dimen/dp_28"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_pk_victor_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜红队获得胜利"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_pk_flag_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pk_flag"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最佳助攻"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

        <com.kissspace.common.widget.CircleImageView
            android:id="@+id/iv_gift_1"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@id/tv_pk_flag_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:strokeColor="#FFBE11"
            app:strokeWidth="1.5dp"
            android:layout_width="59dp"
            android:layout_height="59dp" />

        <com.kissspace.common.widget.CircleImageView
            android:id="@+id/iv_gift_2"
            app:layout_constraintBottom_toBottomOf="@id/iv_gift_1"
            app:layout_constraintRight_toLeftOf="@id/iv_gift_1"
            android:layout_marginEnd="@dimen/dp_19"
            app:strokeColor="#FE81B2"
            app:strokeWidth="1.5dp"
            android:visibility="visible"
            android:layout_width="49dp"
            android:layout_height="49dp" />

        <com.kissspace.common.widget.CircleImageView
            app:layout_constraintLeft_toRightOf="@id/iv_gift_1"
            android:layout_marginStart="@dimen/dp_19"
            app:layout_constraintBottom_toBottomOf="@id/iv_gift_1"
            android:id="@+id/iv_gift_3"
            app:strokeColor="#FE81B2"
            android:visibility="visible"
            app:strokeWidth="1.5dp"
            android:layout_width="49dp"
            android:layout_height="49dp" />

        <ImageView

            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-5dp"
            app:layout_constraintTop_toTopOf="@id/iv_gift_1"
            app:layout_constraintRight_toRightOf="@id/iv_gift_1"
            android:src="@mipmap/ic_pk_give_gift_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-5dp"
            app:layout_constraintTop_toTopOf="@id/iv_gift_3"
            app:layout_constraintRight_toRightOf="@id/iv_gift_3"
            android:src="@mipmap/ic_pk_give_gift_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-5dp"
            app:layout_constraintTop_toTopOf="@id/iv_gift_2"
            app:layout_constraintRight_toRightOf="@id/iv_gift_2"
            android:src="@mipmap/ic_pk_give_gift_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/tv_pk_victor_close"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_pk_victor_bg"
            android:background="@mipmap/ic_pk_close"
            android:layout_width="@dimen/dp_108"
            android:text="关闭(3s)"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_height="@dimen/dp_39" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>